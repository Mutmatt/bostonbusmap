<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.schneeloch.torontotransit"
      android:versionName="4.00" android:versionCode="93">
	<application android:label="@string/app_name" android:icon="@drawable/appicon" 

	android:theme="@style/android:Theme.NoTitleBar"
	>
		<activity android:label="@string/app_name" android:name=".main.Main" android:launchMode="singleTop">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.SEARCH"></action>
			</intent-filter>
			<meta-data android:name="android.app.searchable" android:resource="@xml/searchable" 
			/>
		</activity>
		<activity android:name=".main.SearchResults">
		</activity>
		<activity android:name=".main.MoreInfo" ></activity>
		<activity android:name=".main.AlertInfo" ></activity>
		<activity android:name=".main.ReportProblem" ></activity>
		<activity android:name=".main.Preferences" android:label="@string/app_name">
		</activity> 
		<activity android:name=".main.Instructions" android:theme="@android:style/Theme.Dialog"></activity>
		<uses-library android:name="com.google.android.maps"></uses-library>
		<meta-data android:name="android.app.default_searchable"
               android:value=".main.SearchResults" />
		
	<uses-library android:name="android.test.runner"></uses-library>
	<provider android:name=".provider.TransitContentProvider" android:authorities="com.bostonbusmap.torontotransitprovider"></provider>
</application>

	<!-- <supports-screens></supports-screens>-->
	<uses-sdk android:minSdkVersion="3" ></uses-sdk>
	<uses-sdk android:targetSdkVersion="4"></uses-sdk>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>

	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
<instrumentation android:name="android.test.InstrumentationTestRunner" android:targetPackage="com.schneeloch.torontotransit"></instrumentation>
</manifest>
