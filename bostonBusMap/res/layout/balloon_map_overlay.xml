<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" android:orientation="horizontal"
	android:paddingBottom="5dip"
	android:paddingTop="5dip"
	android:paddingLeft="10dip" 
	android:background="@drawable/tooltip" 
	android:id="@+id/balloon_main_layout"
	android:paddingRight="10dip"
		>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:orientation="vertical" 
	
>

		<TextView android:layout_height="wrap_content"
			android:layout_width="fill_parent" 
			android:id="@+id/balloon_item_title"
			android:text="balloon_item_title" 
			android:textSize="15dip"
			android:textColor="#FF000000"
			android:bufferType="spannable"></TextView>
		<TextView android:layout_height="wrap_content"
			android:layout_width="fill_parent" 
			android:id="@+id/balloon_item_snippet"
			android:text="balloon_item_snippet" 
			android:textSize="12dip"
			android:textColor="#FF000000"
			android:bufferType="spannable"></TextView>
</LinearLayout>

<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
 android:id="@+id/balloon_item_favorite" android:background="@drawable/empty_star"></ImageView>
</LinearLayout>
